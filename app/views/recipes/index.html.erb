<div class="container">
  <div class="row">
  
    <div class="col s4">

        <div class="col s12">
          <%= image_tag current_user.image.url(:medium) %>
        </div>
        <div class="col s12">
          <%= current_user.name %>
          <%= current_user.location %>
        </div>
        <div class="col s12">
          <h5>Recipe &hearts;'s</h5>
        </div>
        <div class="col s12">
          <span>&hearts;</span>
        </div>

    </div>

      <div class="col s8 section">

        <div class="col s12">
          <h3><%= current_user.name %>'s Recipes</h3>
          <%= link_to "Add New Recipe", new_recipe_path %>
        </div>
        <div class="col s12">
          <ul>
            <% @recipes.each do |recipe| %>
              <li>
              <%= link_to recipe.name, recipe_path(recipe) %>
              </li>
            <% end %>
          </ul>
        </div>

      </div>

  </div>
</div>