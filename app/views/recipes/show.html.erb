<h1>Single Recipe</h1>

<%= link_to "Edit Recipe", edit_recipe_path %>

<div class="row">
  <div class="col s2">
    <h3>Ingredients</h3>
    <%= @recipe.ingredients %>
  </div>
</div>

<div class="row">
  <div class="col s8">
    <h3><%= @recipe.name %></h3>
  </div>
  <div class="col s8">
    <h3>About Recipe</h3>
    <%= @recipe.description %>
  </div>
  <div class="col s8">
    <h3>Instructions</h3>
    <%= @recipe.instructions %>
  </div>
</div>

<div class="row">
  <div class="">
    <h3>Comments</h3>
    <h4>Add Comment<h4>

    <% current_user.recipes.each do |recipe| %>
      <% recipe.comments.each do |comment| %>
        <%= comment.content %>
      <% end %>
    <% end %>
  </div>
</div>




