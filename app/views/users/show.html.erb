<div class="container">
  
  <div class="row">

    <div class="col s4">
        <h2>Profile</h2>
        <div class="col s12">
          <%= image_tag current_user.image.url(:medium), class: "max-width" %>
        </div>
        <div class="col s12">
          <p><%= current_user.name %></p>
          <p><%= current_user.location %></p>
        </div>
        <div class="col s12">
          <h5>Recipe &hearts;'s</h5>
        </div>
        <div class="col s12">
          <span>&hearts;</span>
        </div>

    </div>

      <div class="col s8">

        <div class="col s12">
          <h3>Your Recipes</h3>
          <%= link_to "View All", recipes_path %>
          &nbsp;&nbsp;|&nbsp;&nbsp;
          <%= link_to "Add New Recipe", new_recipe_path %>
        </div>
        <div class="col s12">
          <div class="card small">
            <div class="card-image max-width">
              <%#= image_tag current_user.recipes.first.image.url %>
              <span class="card-title"><%#= current_user.recipes.first.name %></span>
            </div>
            <div class="card-content">  
              <%#= current_user.recipes.first.description %>
            </div>
            <div class="card-action">
              <%#= link_to current_user.recipes.first.name, recipe_path(recipe) %>
            </div>
          </div>
          <div class="card small"></div>
          <div class="card small"></div>
        </div>
        <div class="col s12">
          <h3>Your Top 3 Recipes</h3>
        </div>
        <div class="col s12">
          <div class="card small"></div>
          <div class="card small"></div>
          <div class="card small"></div>
        </div>

      </div>
  </div>
</div>