<!DOCTYPE html>
<html>
  <head>
    <title>CookBook App</title>
    <%= csrf_meta_tags %>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/css/materialize.min.css">
    <script defer src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/js/materialize.min.js"></script>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav>
    <div class="container">
      <div class="nav-wrapper">
        <%= link_to 'CookBook', root_path %>
        <ul id="nav-mobile" class="right hide-on-med-and-down">
          <li>
            <% if current_user %>
              Welcome, <%= current_user.name %>!
          </li>
          <li>
              <%= link_to 'Profile', user_path(current_user) %>
          </li>
          <li>
              <%= link_to 'Log Out', session_path('whatever'), method: :delete %>
          </li>
            <% else %>
          <li>
            <%= link_to 'Log In', login_path %>
          </li>
          <li>
              <%= link_to 'Sign Up', new_user_path %>
          </li>
            <% end %>
        </ul>
      </div>
    </div>
    </nav>

      <%= yield %>
  </body>
</html>
